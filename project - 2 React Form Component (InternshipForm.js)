import React, { useState } from 'react';
import axios from 'axios';

function InternshipForm() {
  const [form, setForm] = useState({ name: '', email: '', resume: '' });
  const [status, setStatus] = useState('');

  const handleChange = e => {
    setForm({ ...form, [e.target.name]: e.target.value });
  };

  const handleSubmit = async e => {
    e.preventDefault();
    setStatus('Submitting...');
    try {
      const res = await axios.post('/api/internship/apply', form);
      setStatus('Application submitted successfully!');
    } catch (err) {
      setStatus('Failed to submit application.');
    }
  };

  return (
    <form onSubmit={handleSubmit}>
      <input name="name" onChange={handleChange} required placeholder="Name" />
      <input name="email" onChange={handleChange} required placeholder="Email" />
      <textarea name="resume" onChange={handleChange} placeholder="Paste resume" />
      <button type="submit">Submit</button>
      <p>{status}</p>
    </form>
  );
}
export default InternshipForm;
